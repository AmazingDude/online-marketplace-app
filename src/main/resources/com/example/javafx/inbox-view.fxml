<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.javafx.InboxController"
      stylesheets="@style.css"
      styleClass="inbox-view"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Inbox" styleClass="title-label"/>

        <TabPane fx:id="conversationTabs" VBox.vgrow="ALWAYS"/>

        <Label text="Reply:" styleClass="subtitle-label"/>

        <TextArea fx:id="replyTextArea" prefHeight="100.0" prefWidth="560.0"/>

        <Button text="Send Reply" onAction="#sendReply" styleClass="reply-button"/>
    </children>
</VBox>
