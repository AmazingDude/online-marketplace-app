<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.ReportsViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Marketplace Reports" style="-fx-font-size: 18; -fx-font-weight: bold;" />
        <Label text="All Products:" style="-fx-font-weight: bold;" />
        <ListView fx:id="allProductsList" prefHeight="150.0" prefWidth="200.0" />
        <Label text="All Users:" style="-fx-font-weight: bold;" />
        <ListView fx:id="allUsersList" prefHeight="150.0" prefWidth="200.0" />
        <Label text="All Transactions:" style="-fx-font-weight: bold;"/>
        <ListView fx:id="allTransactionsList" prefHeight="150" prefWidth="200"/>
        <Label fx:id="totalRevenueLabel" style="-fx-font-weight: bold;" />
        <Button mnemonicParsing="false" onAction="#generateReports" text="Generate Reports" />
    </children>
</VBox>
