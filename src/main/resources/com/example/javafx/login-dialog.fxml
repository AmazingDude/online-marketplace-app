<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.javafx.LoginController"
      stylesheets="@style.css"
      prefWidth="400.0" prefHeight="530.0" minWidth="400.0" minHeight="300.0" styleClass="root">

    <padding>
        <Insets top="30.0" right="40.0" bottom="30.0" left="40.0"/>
    </padding>

    <children>
        <Label text="Member Login" styleClass="dialog-title"/>

        <!-- Username Field -->
        <VBox spacing="6.0" alignment="BASELINE_LEFT" maxWidth="300">
            <Label text="Username:" styleClass="form-label"/>
            <TextField fx:id="usernameField" promptText="Enter your username" prefWidth="280"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="6.0" alignment="BASELINE_LEFT" maxWidth="300">
            <Label text="Password:" styleClass="form-label"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="280"/>
        </VBox>

        <!-- Account Type -->
        <VBox spacing="6.0" alignment="BASELINE_LEFT" maxWidth="300">
            <Label text="Account Type:" styleClass="form-label"/>
            <HBox spacing="20.0" alignment="CENTER_LEFT">
                <RadioButton fx:id="buyerRadioButton" text="Buyer" selected="true">
                    <toggleGroup>
                        <ToggleGroup fx:id="accountTypeGroup"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="sellerRadioButton" text="Seller" toggleGroup="$accountTypeGroup"/>
            </HBox>
        </VBox>

        <!-- Buttons -->
        <VBox spacing="10.0" alignment="CENTER" maxWidth="300">
            <VBox.margin>
                <Insets top="25.0" bottom="5.0"/>
            </VBox.margin>
            <Button fx:id="loginButton" onAction="#login" text="Login" styleClass="login-button" maxWidth="Infinity"/>
            <Button fx:id="registerButton" onAction="#register" text="Register" styleClass="register-button" maxWidth="Infinity"/>
        </VBox>

        <!-- Message Label -->
        <Label fx:id="messageLabel" styleClass="message-label" alignment="CENTER" wrapText="true" maxWidth="Infinity"/>
    </children>
</VBox>
